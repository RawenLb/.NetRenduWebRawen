@model AM.ApplicationCore.Domain.Flight

@{
    ViewData["Title"] = "Edit";
}



<h4>Edit Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Flight Fields -->
            <div class="form-group">
                <label asp-for="Departure" class="control-label"></label>
                <input asp-for="Departure" class="form-control" />
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>

            <!-- Pilot Image Field -->
            <div class="form-group">
                <label for="PilotImage" class="control-label">Pilot Image</label>
                <input type="file" name="PilotImage" class="form-control" />
            </div>

            <!-- Plane Dropdown -->
            <div class="form-group">
                <label asp-for="PlaneFK" class="control-label"></label>
                <select asp-for="PlaneFK" class="form-control" asp-items="ViewBag.planeList"></select>
                <span asp-validation-for="PlaneFK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
